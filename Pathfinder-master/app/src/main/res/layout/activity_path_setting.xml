<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@android:color/darker_gray"
    android:theme="@style/AppTheme"
    tools:context=".PathSettingActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="95dp"
        android:layout_marginStart="0dp"
        android:layout_marginTop="0dp"
        android:background="@color/colorPrimaryDark"
        android:backgroundTintMode="multiply"
        android:gravity="center"
        android:text="@string/travel_parameters"
        android:textSize="32sp" />

    <TextView
        android:layout_width="80dp"
        android:layout_height="100dp"
        android:layout_marginStart="100dp"
        android:layout_marginTop="200dp"
        android:autoText="false"
        android:background="#00B11D1D"
        android:gravity="center"
        android:includeFontPadding="false"
        android:text="Luas"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="20sp"
        tools:layout_editor_absoluteX="160dp"
        tools:layout_editor_absoluteY="369dp" />

    <TextView
        android:layout_width="80dp"
        android:layout_height="100dp"
        android:layout_marginStart="100dp"
        android:layout_marginTop="300dp"
        android:gravity="center"
        android:text="Rail"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="20sp"
        tools:layout_editor_absoluteX="160dp"
        tools:layout_editor_absoluteY="369dp" />

    <TextView
        android:layout_width="80dp"
        android:layout_height="100dp"
        android:layout_marginStart="100dp"
        android:layout_marginTop="400dp"
        android:gravity="center"
        android:text="Bus"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="20sp"
        tools:layout_editor_absoluteX="160dp"
        tools:layout_editor_absoluteY="369dp" />

    <Switch
        android:id="@+id/luasSwitch"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginStart="200dp"
        android:layout_marginTop="200dp"
        android:backgroundTint="#000000"
        android:buttonTint="#E10707"
        android:drawableTint="#8F1616"
        android:foregroundTint="#ED0101"
        android:textColor="#931B1B"
        android:textColorHighlight="#F11010"
        android:tickMarkTint="#00BC1313"
        android:visibility="visible" />

    <Switch
        android:id="@+id/railSwitch"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginStart="200dp"
        android:layout_marginTop="300dp" />

    <Switch
        android:id="@+id/busSwitch"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginStart="200dp"
        android:layout_marginTop="400dp"
        android:backgroundTint="#C32222"
        android:buttonTint="@color/layout_border_color"
        android:checked="false"
        android:drawableTint="#E11414" />

    <Button
        android:id="@+id/saveSettingButton"
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="600dp"
        android:backgroundTint="@color/colorPrimaryDark"
        android:gravity="center"
        android:text="@string/save_settings"
        android:textColor="@color/colorAccent" />
</RelativeLayout>